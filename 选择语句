--选择某一数据库
USE sql_store

/从某一table中调用所有数据/
SELECT *
FROM customers

/添加筛选条件：WHERE，添加排序依据：ORDER BY/
SELECT *
FROM customers
WHERE customers_id = 1

SELECT *
FROM customers
ORDER BY first_name

/从某一table中调用数据，并对数据进行运算, 用AS定义新变量/
SELECT
  last_name
  first_name
  points
  points * 10 + 100 AS ‘discount_factor'
 
/用DISTINCT去除重复的州/
SELECT DISTINCT state
FROM customers

--课后练习
--  Return all the products
--  name
--  Unit price
--  New price (unit price * 1.1)

SELECT
  name
  Unit price
  Unit price * 1.1 AS New price
From products
  
